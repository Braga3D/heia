<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ch.heia.mobiledev.helloworld.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/text_hello"
        android:textSize="@dimen/message_text_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearance"
        android:textSize="24sp"
        android:text="Your name :"
        android:id="@+id/label_name"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/text_hello"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="24sp"
        android:ems="10"
        android:id="@+id/edit_name"
        android:hint="Name"
        android:layout_below="@+id/text_hello"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@id/label_name"
        android:layout_alignBaseline="@id/label_name"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_display"
        android:text="@string/button_text_display"
        android:layout_below="@+id/edit_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_display"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_clear"
        android:text="@string/button_text_clear" />

</RelativeLayout>
